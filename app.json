{
  "expo": {
    "name": "Sober Dailies",
    "slug": "sober-dailies",
    "version": "1.7.5",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/splash-ios-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#061D4A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nealwagner.soberdailies",
      "buildNumber": "4",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to let you add photos.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for audio features.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to save and share images.",
        "NSPhotoLibraryAddUsageDescription": "This app saves images to your library.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com": {
          "apple": {
            "security": {
              "application-groups": [
                "group.com.myapp"
              ]
            }
          }
        }
      }
    },
    "android": {
      "package": "com.nealwagner.soberdailies",
      "versionCode": 32,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon-foreground.png",
        "backgroundImage": "./assets/images/adaptive-icon-background.png",
        "monochromeImage": "./assets/images/adaptive-icon-monochrome.png"
      },
      "icon": "./assets/images/icon.png",
      "permissions": [
        "android.permission.VIBRATE"
      ]
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "extra": {
      "eas": {
        "projectId": "651e2e43-404d-47e3-94ac-695b4febd27a"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.webp"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "ios": {
            "image": "./assets/images/splash-ios-icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#061D4A"
          },
          "android": {
            "image": "./assets/images/splash-android-icon.png",
            "imageWidth": 200,
            "backgroundColor": "#061D4A"
          }
        }
      ],
      [
        "expo-font"
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "minSdkVersion": 24
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}